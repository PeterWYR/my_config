// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
   {
      "context": "Workspace",
      "bindings": {
         // "shift shift": "file_finder::Toggle"
      },
   },
   {
      "context": "Editor && vim_mode == insert",
      "bindings": {
         "j k": "vim::NormalBefore",
         "k j": "vim::NormalBefore",
      },
   },

   {
      "context": "Editor && vim_mode == normal",
      "bindings": {
         "j": "vim::Left",
         "i": "vim::Up",
         "k": "vim::Down",
         "l": "vim::Right",
         "shift-j": ["workspace::SendKeystrokes", "5 j"],
         "shift-i": ["workspace::SendKeystrokes", "5 i"],
         "shift-k": ["workspace::SendKeystrokes", "5 k"],
         "shift-l": ["workspace::SendKeystrokes", "5 l"],

         "s": "vim::InsertBefore",

         "n": "vim::FirstNonWhitespace",
         "m": "vim::EndOfLine",

         "=": ["vim::MoveToNextMatch", "editor::ScrollCursorCenter"],
         "-": ["vim::MoveToPreviousMatch", "editor::ScrollCursorCenter"],
      },
   },
   {
      "context": "Editor && vim_mode == visual",
      "bindings": {
         "j": "vim::Left",
         "i": "vim::Up",
         "k": "vim::Down",
         "l": "vim::Right",
         "shift-j": ["workspace::SendKeystrokes", "10 j"],
         "shift-i": ["workspace::SendKeystrokes", "10 i"],
         "shift-k": ["workspace::SendKeystrokes", "10 k"],
         "shift-l": ["workspace::SendKeystrokes", "10 l"],
      },
   },
]
